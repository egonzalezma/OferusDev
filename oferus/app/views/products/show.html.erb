<%= render "home/header" %>
<%= render "home/navbar" %>
 <div class="col s12 m9 l9 white">
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Información producto</span>
              <p>
      	<p> <strong>ID: </strong> <%= @product.id%> </p>
				<p> <strong>Identificador de producto: </strong> <%= @product.product_identifier%> </p>
				<p> <strong>Nombre producto: </strong> <%= @product.product_name1%> </p>
				<p> <strong>Nombre2 producto: </strong> <%= @product.product_name2%> </p>
				<p> <strong>Unidad de medida: </strong> <%= @product.product_unit_of_measurement%> </p>
				<p> <strong>SKU: </strong> <%= @product.product_stock_keeping_unit%> </p>
				<p> <strong>Linea de producto: </strong> <%= @product.product_line%> </p>
				<p> <strong>Grupo de producto: </strong> <%= @product.product_group%> </p>
				<p> <strong>Tipo de producto:</strong> <%= @product.product_type%> </p>
				<p> <strong>Ubucación bodega:</strong> <%= @product.product_cellar_location%> </p>
				<p> <strong>Precio normal:</strong> <%= @product.product_normal_price%> </p>
				<p> <strong>Precio minimo:</strong> <%= @product.product_minimum_price%> </p>
				<p> <strong>Sucursal:</strong> <%= @product.product_branch_office%> </p>
				<p> <strong>Stock:</strong> <%=@product.product_stock%> </p>
				<p> <strong>Dominio:</strong> <%= @product.domain%> </p>
				<p> <strong>Fecha creación:</strong> <%= @product.created_at%> </p>
				<p> <strong>Fecha actualización:</strong> <%= @product.updated_at%> </p>
              </p>
            </div>
            <div class="card-action center">
              <%= link_to edit_product_path(@product) do %>
                        <i class="material-icons">mode_edit</i>
              <%end%>
              <%= link_to products_path do %>
                        <i class="material-icons">arrow_back</i>
              <%end%>
            </div>
          </div>
        </div>
      </div>
            
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Infomación obtenida en tiempo real Consulta Web Service:</span>
              <p>
              <span>
              <% json = Product.find_by_erp(:product_identifier, @product.product_identifier)%>
              <%if json != nil%>
              <% product = Product.get_product_from_json(json)%>
              <p> 
              <strong>Identificador de producto: </strong>
              <%= product.product_identifier%> 
              </p>
              <p> 
              <strong>Precio normal: </strong> 
              <%= @product.product_normal_price%> 
              </p>
              <p> 
              <strong>Precio minimo: </strong> 
              <%= @product.product_minimum_price%> 
              </p>
               <p> 
               <strong>Stock: </strong> 
               <%=@product.product_stock%> 
              <%end%>
               </p>
              </span>
              </p>
            </div>
            <div class="card-action center">
              <% url = Datum::API_BASE_URL_PRODUCT_ALL+" and pt_part=\""+@product.product_identifier+"\""%>
              <a href="<%= url %>">IR ERP ITAKA</a>
            </div>
          </div>
        </div>
      </div>

 </div>
<%= render "home/footer" %>
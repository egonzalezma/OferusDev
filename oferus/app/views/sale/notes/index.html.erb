<%= render "home/header" %>
<%= render "home/navbar" %>

      <div class="col s12 m12 l9 white"> <!-- Note that "m8 l9" was added -->
            <div class="divider"></div>
            <div>
                <h5 class="center-align">Notas de Venta ITAKA</h5>
                <h5 class="show-on-medium-and-down hide-on-med-and-up">
                <%if @sale_notes.length != 0%>
                  Lista de notas de ventas
                  <%else%>
                  Actualmente no hay notas creadas
                <%end%>
                </h5>
                        <p>
                        <div class="fixed-action-btn show-on-medium-and-down hide-on-med-and-up" style="bottom: 45px; right: 24px;">
                          <a class="btn-floating btn-large red">
                            <i class="large material-icons">mode_edit</i>
                          </a>
                          <ul>
                            <li><a href="<%=post_sale_notes_path%>" class="btn-floating red"><i class="material-icons">add_circle</i></a></li>
                          </ul>
                        </div>
                        </p>
                 
            </div>
              
            <div class="white black-text">
                      <ul id="" class="left hide-on-med-and-down" >
                      <li>
                        <%if @sale_notes.length != 0%>
                        <h5>Lista de notas de ventas</h5>
                        <%else%>
                        <h5>Actualmente no hay notas creadas</h5>
                        <%end%>
                      </li>
                      </ul>
                      <ul id="" class="right hide-on-med-and-down">
                        <a href="<%=post_sale_notes_path%>" class="waves-effect waves-light btn">
                        Nueva nota de venta 
                        </a>
                      </ul>
            </div>
            
            <% if @sale_notes.length != 0%>
            <div>
            <table class="responsive-table striped centered">
              <thead class="responsive">
                <tr>
                        <th>Identificador Orden</th>
                        <th>Estado</th>
                        <th colspan="17"></th>
                </tr>
              </thead>

              <tbody class="responsive">
                <% @sale_notes.each do |sale_note| %>
                  <tr>
                    <td>
                    <%= link_to sale_note do %>
                        <p class="blue-text text-darken-2" >
                        <%=sale_note.order_number%>
                        </p>
                      <%end%>
                    </td>
                    <td><%=sale_note.order_state%></td>
                    <td><%= link_to sale_note do %>
                        <i class="material-icons">visibility</i>
                        <%end%>
                    </td>
                    <td><%= link_to sale_note, method: :delete, data: { confirm: 'Estas seguro que deseas eliminar este item?' } do %>
                        <i class="material-icons">delete</i>
                        <%end%>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            </div>
            <%end%>
            
            <div class="nav-wrapper white black-text">
              <%= will_paginate @sale_notes, :class => "pagination center-align"%>
            </div>
            
            
      </div>

<%= render "home/footer" %>

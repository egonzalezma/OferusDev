<%= render "home/header" %>
<%= render "home/navbar" %>

      <div class="col s12 m12 l9 white"> <!-- Note that "m8 l9" was added -->
            <div class="divider"></div>
            <div>
                <h5 class="center-align">Clientes ITAKA</h5>
                <div class="divider"></div>
                <h5 class="show-on-medium-and-down hide-on-med-and-up center-align">
                <%if @clients.length != 0%>
                  Lista de clientes</h5>
                  <%else%>
                  Actualmente no hay clientes cargados</h5>
                <%end%>
                <div class="divider"></div>
                 <ul id="" class="center show-on-medium-and-down hide-on-med-and-up center-align">
                    <a href="<%=new_client_path%>" class="waves-effect waves-light btn hide">
                    Nuevo cliente
                    </a>
                    <div class="divider hide"></div>
                    <a href="<%=data_client_load_path%>" class="waves-effect waves-light btn">
                    Cargar clientes
                    </a>
                  </ul>     
                 
            </div>
              
            <div class="white black-text">
                      <ul id="" class="left hide-on-med-and-down" >
                      <li>
                        <%if @clients.length != 0%>
                        <h5>Lista de clientes</h5>
                        <%else%>
                        <h5>Actualmente no hay clientes cargados</h5>
                        <%end%>
                      </li>
                      </ul>
                      <ul id="" class="right hide-on-med-and-down">
                        <a href="<%=new_client_path%>" class="waves-effect waves-light btn hide">
                        Nuevo cliente
                        </a>
                        <a href="<%=data_client_load_path%>" class="waves-effect waves-light btn">
                        Cargar cliente
                        </a>
                      </ul>
            </div>
            
            <% if @clients.length != 0%>
            <div>
            <table class="striped centered">
              <thead class="responsive">
                <tr>
                        <th>Número único</th>
                        <th>Rut cliente</th>
                        <th>Nombre 1</th>
                        <th>Nombre 2</th>
                        <th colspan="17"></th>
                </tr>
              </thead>

              <tbody class="responsive">
                <% @clients.each do |client| %>
                  <tr>
                    <td>
                    <%= link_to client do %>
                        <p class="blue-text text-darken-2" >
                        <%=client.client_unique_number%>
                        </p>
                        <%end%>
                    </td>
                    <td><%=client.client_rut%></td>
                    <td><%=client.client_name1%></td>
                    <td><%=client.client_name2%></td>
                    <td><%= link_to client do %>
                        <i class="material-icons">visibility</i>
                        <%end%>
                    </td>
                    <td><%= link_to edit_client_path(client) do %>
                        <i class="material-icons">mode_edit</i>
                        <%end%>
                    </td>
                    <td><%= link_to client, method: :delete, data: { confirm: 'Estás seguro que deseas eliminar este ítem?' } do %>
                        <i class="material-icons">delete</i>
                        <%end%>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            </div>
            <%end%>
            
            <div class="nav-wrapper white black-text">
              <%= will_paginate @clients, :class => "pagination center-align"%>
            </div>
            
            
      </div>

<%= render "home/footer" %>
